pipeline {
    agent any

    tools {
            // Install the Maven version configured as "M3" and add it to the path.
            maven "M3"
        }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                make 'mvn clean package'
                archiveArtifacts artifacts: '**/target/*.jar'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                make 'mvn test'
                junit '**/target/*.xml'
            }
        }

    }
}