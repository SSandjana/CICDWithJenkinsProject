pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                make 'mvn clean compile'
                archiveArtifacts artifacts: '**/target/*.jar'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                make 'mvn test'
                junit '**/target/*.xml'
            }
        }

    }
}